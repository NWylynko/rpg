{
	"name": "create-the-next-big-thing",
	"version": "0.0.0",
	"license": "MIT",
	"bin": "dist/cli.js",
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"build": "tsc",
		"start": "clear; dist/cli.js",
		"watch": "nodemon",
		"lint": "xo --fix",
		"pretest": "yarn build",
		"test": "xo && ava"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"ink": "^3.0.8",
		"ink-ascii": "^0.0.4",
		"ink-big-text": "^1.2.0",
		"ink-color-pipe": "^2.0.0",
		"ink-confirm-input": "^2.0.0",
		"ink-divider": "^3.0.0",
		"ink-gradient": "^2.0.0",
		"ink-link": "^2.0.0",
		"ink-markdown": "^1.0.1",
		"ink-multi-select": "^2.0.0",
		"ink-quicksearch-input": "^1.0.0",
		"ink-select-input": "^4.2.0",
		"ink-spinner": "^4.0.1",
		"ink-tab": "^4.1.0",
		"ink-table": "^3.0.0",
		"ink-text-input": "^4.0.1",
		"ink-use-stdout-dimensions": "^1.0.5",
		"meow": "^9.0.0",
		"react": "^17.0.1"
	},
	"devDependencies": {
		"@ava/typescript": "^1.1.1",
		"@sindresorhus/tsconfig": "^0.8.0",
		"@types/react": "^17.0.0",
		"@types/source-map-support": "^0.5.3",
		"ava": "^3.15.0",
		"chalk": "^4.1.0",
		"eslint-config-xo-react": "^0.23.0",
		"eslint-plugin-react": "^7.22.0",
		"eslint-plugin-react-hooks": "^4.2.0",
		"ink-testing-library": "^2.1.0",
		"nodemon": "^2.0.7",
		"source-map-support": "^0.5.19",
		"ts-node": "^9.1.1",
		"typescript": "^4.1.3",
		"xo": "^0.37.1"
	},
	"ava": {
		"typescript": {
			"extensions": [
				"tsx"
			],
			"rewritePaths": {
				"src/": "dist/"
			}
		}
	},
	"xo": {
		"extends": "xo-react",
		"rules": {
			"react/prop-types": "off"
		}
	}
}
